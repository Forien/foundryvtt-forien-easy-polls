<table id="poll-dialog-table">
    <thead>
    <tr>
        <th colspan="3">
            <input type="text" class="poll-title" placeholder="Poll Title" {{#if poll.question}}value="{{poll.question}}"{{/if}}><br>
        </th>
    </tr>
    </thead>
    <tbody class="poll-options">
    <tr class="option-template hidden">
        <td class="ordering-number"></td>
        <td class="option">
            <input class="poll-option" type="text"
                   placeholder="{{localize "Forien.EasyPolls.PollDialog.Option"}} {PON}"/></td>
        <td class="button">
            <button class="delete-option"><i class="fas fa-times"></i></button>
        </td>
    </tr>
    {{#each poll.indexedParts}}
        <tr>
            <td class="ordering-number">{{this.index}}.</td>
            <td class="option">
                <input class="poll-option" type="text"
                       placeholder="{{localize "Forien.EasyPolls.PollDialog.Option"}} {{this.index}}" value="{{this.part}}"/></td>
            <td class="button">
                <button class="delete-option"><i class="fas fa-times"></i></button>
            </td>
        </tr>
    {{/each}}
    </tbody>
    <tfoot>
<tr>
    <th colspan="3">
        <button class="add-option">
            <i class="fas fa-add"></i> {{localize "Forien.EasyPolls.PollDialog.AddOption"}}
        </button>
    </th>
</tr>
    </tfoot>
</table>
<div class="poll-controls">
    {{> modules/forien-easy-polls/templates/partials/forien-switch.hbs name="toggle-mode" label="Mode" checked=settings.mode}}
    {{> modules/forien-easy-polls/templates/partials/forien-switch.hbs name="toggle-results" label="Results" checked=settings.results}}
    {{> modules/forien-easy-polls/templates/partials/forien-switch.hbs name="toggle-secret" label="Secret" checked=settings.secret}}
</div>
