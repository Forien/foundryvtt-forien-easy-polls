<table class="forien-saved-polls">
    <thead>
    <tr>
        <th>{{localize 'Forien.EasyPolls.SavedPollsApp.OrderingNumber'}}</th>
        <th>{{localize 'Forien.EasyPolls.SavedPollsApp.PollQuestion'}}</th>
        <th data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.PollMode'}}"><i class="fas fa-square-check"></i></th>
        <th data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.PollResults'}}"><i class="fas fa-eye"></i></th>
        <th data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.PollSecret'}}"><i class="fas fa-user-secret"></i></th>
        <th>{{localize 'Forien.EasyPolls.SavedPollsApp.Controls'}}</th>
    </tr>
    </thead>
    <tbody>
    {{#each polls}}
        <tr class="poll-entry" data-poll="{{this.id}}">
            <td class="ordering-number">{{this.index}}.</td>
            <td class="question">{{this.question}}</td>
            <td class="mode">
                {{#if this.isMultiple}}
                    <i class="fas fa-square-check" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Multiple'}}"></i>
                {{else}}
                    <i class="far fa-circle-dot" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Single'}}"></i>
                {{/if}}
            </td>
            <td class="results">
                {{#if this.showResults}}
                    <i class="fas fa-eye" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Results'}}"></i>
                {{else}}
                    <i class="far fa-eye-slash" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.NoResults'}}"></i>
                {{/if}}
            </td>
            <td class="secret">
                {{#if this.isSecret}}
                    <i class="fas fa-user-secret" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Secret'}}"></i>
                {{else}}
                    <i class="fas fa-users" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Public'}}"></i>
                {{/if}}
            </td>
            <td class="controls">
                <button class="post-poll" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Post'}}"><i class="fas fa-clipboard-list"></i></button>
                <button class="edit-poll" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Edit'}}"><i class="fas fa-edit"></i></button>
                <button class="delete-poll" data-tooltip="{{localize 'Forien.EasyPolls.SavedPollsApp.Tooltips.Delete'}}"><i class="fas fa-trash"></i></button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
<div class="buttons">
    <button class="create-poll">{{localize 'Forien.EasyPolls.SavedPollsApp.CreateNew'}}</button>
</div>
