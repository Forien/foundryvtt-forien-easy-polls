<h2>{{question}}:</h2>
<div class="answers">
    {{#if results}}
    {{#each parts}}
    <div class="answer">
        <div class="bar-container">
            <div class="bar" style="width: {{this.percent}}%"></div>
            <div class="answer-data">
                <span class="label">{{this.label}}</span>
                <span class="count" {{#unless ../settings.secret}}data-tooltip="{{this.voters}}"{{/unless}}>{{this.count}}</span>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    {{#each parts}}
        <label><input type={{#if (eq ../settings.mode 'multiple')}}checkbox{{else}}radio{{/if}} name="poll-{{../poll}}-answer" class="poll-answer" data-answer="{{this.label}}" data-poll="{{../poll}}" {{checked checked}}/> {{this.label}}</label>
    {{/each}}
    {{/if}}
</div>
{{#if (or settings.display isGM)}}
<button class="toggle" data-poll="{{poll}}">{{localize "Forien.EasyPolls.ToggleResults"}}</button>
{{/if}}
<div class="stats">
    <span>{{localize "Forien.EasyPolls.CountAnswered"}}: <i class="count-answered">{{total}}</i></span>
</div>